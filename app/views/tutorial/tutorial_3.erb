<%= render template: "invest/investors.erb" %>

<!-- TUTORIAL -->
<div class="tutorial-box">
  <h1>Get Money</h1>
  <span class="close"></span>
  
  <div class="slider-container">
    <div class="slider-turn">
      <p>
        Lets start by creating requesting a loan from the bank.<br>
        We have already filled out everything for you all you need to do is click a button.
      </p>
    </div>
  </div>

  <div class="bottom">
    <div class="btn-2">
      <span>Step 3/?</span>
    </div>
    <button class="next">Got it</button>
  </div>
</div>

<%= javascript_include_tag('tutorial.js') %>

<script type="text/javascript">
  $("#amount_input_loan_from_bank_form").val("25000");
  $("input[name='repay_time']").val("7");
  $(".btn").after("<img src='/assets/left_pointing.png' style='height: 25px;'> Click on that");
</script>