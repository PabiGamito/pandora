<%= stylesheet_link_tag 'bootstrap-sortable' %>

<script src="http://code.highcharts.com/stock/highstock.js"></script>
<script src="http://code.highcharts.com/stock/modules/exporting.js"></script>


<form action="/update-buy-sell-orders" method="post" id="js-update-arrays">

</form>


<h3>The Global Market</h3>

<div class="row">
<form id="js-enter-market">

	<div class="col-md-6 col-xm-12">
	<div class="form-group">
		<label>Select a Market</label>
    <select class="form-control js-select" id="market_select">
	    <%if @item==nil%>
	    	<option value="" disabled selected>Chose a Market</option>
	    <%end%>
    	<%Item.all.each do |item|%>
	    	<%if @item!=item%>
	    		<option value="<%=item.id%>"><%=item.name.capitalize%></option>
	    	<%else%>
	    		<option value="<%=item.id%>" selected><%=item.name.capitalize%></option>
	    	<%end%>
    	<%end%>
    </select>
	</div>
	</div>

	<div class="col-md-6 col-xm-12">
	<div class="form-group">
		<label>Enter Market with:</label>
    <select class="form-control js-select" id="company_select">
    	<option value="" disabled selected>Chose a Company</option>
    	<%Company.where(user_id: current_user.id, main: true).each do |company|%>
			<%if @company!=company%>
				<%if company.sector == 1%>
		    	<option value="<%=company.id%>" selected><%=company.name%> - Mining Sector</option>
		    <%elsif company.sector == 2%>
		    	<option value="<%=company.id%>" selected><%=company.name%> - Industrial Sector</option>
		    <%elsif company.sector == 3%>
		    	<option value="<%=company.id%>" selected><%=company.name%> - Service Sector</option>
		    <%end%>
			<%else%>
				<%if company.sector == 1%>
		    	<option value="<%=company.id%>" selected><%=company.name%> - Mining Sector</option>
		    <%elsif company.sector == 2%>
		    	<option value="<%=company.id%>" selected><%=company.name%> - Industrial Sector</option>
		    <%elsif company.sector == 3%>
		    	<option value="<%=company.id%>" selected><%=company.name%> - Service Sector</option>
		    <%end%>
		  <%end%>
    	<%end%>
    </select>
	</div>
	</div>
</form>
</div>

<div id="js-hide-when-market-open">
	
</div>

<div id="js-market">

	<!-- Renders buy and sell order table + request creation on AJAX request-->

</div>


<%= javascript_include_tag('market-index.js') %>

<%if @direct_render%>
	<%= javascript_tag do %>
		$.ajax({
			type: 'GET',
			url: '/update-orders',
			dataType: 'script',
			data: { 'item_id' : <%=@item.id%>, 'company_id' : <%=@company.id%>}
			// beforeSend: function(xhr) {xhr.setRequestHeader('X-CSRF-Token', $('meta[name="csrf-token"]').attr('content'))}
		});
	<%end%>
<%end%>