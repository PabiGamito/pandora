<container id="yield-container-content"></container>

<!-- For responsive design -->
<%= javascript_tag do %>

    function responsiveview() {
            var wSize = $(window).width();
            if (wSize <= 768) {
                $('#yield-container-content').html("<%= j render 'index_mobile' %>");
            }

            if (wSize > 768) {
                $('#yield-container-content').html("<%= j render 'index_desktop' %>");
            }
        }
        //$(window).on('load', responsiveview);
        //$(window).on('resize', responsiveview);

responsiveview();

<%end%>