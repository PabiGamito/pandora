  <div class="container">
    <div class="row mt centered">
      <div class="col-lg-6 col-lg-offset-3">
        <h1>Sign up to Pandora's<br/>Amazing Beta</h1>
      </div>
    </div><!-- /row -->
    
    <div class="row mt">
      <div class="col-lg-6 col-lg-offset-3">

      <!-- #USER CREATION FORM -->
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-horizontal form-user form1"}) do |f| %>
       <!-- Add flash notice -->

        <div class="form-group">
          <%= f.label :username, class: "control-label mr" %><br>
          <%= f.text_field :username, class: "text-field form-control", html: {spellcheck: "false"} %>
        </div>
              
        <div class="form-group">
          <%= f.label :email, class: "control-label mr" %>
          <%= f.email_field :email, class: "text-field form-control", html: {spellcheck: "false"} %>
        </div>
                
        <div class="form-group">
          <%= f.label :password, class: "control-label ml pwd-label" %>
          <%= f.password_field :password, class: "text-field form-control pwd", html: {autocomplete: "off"} %>
        </div>
                 
        <div class="form-group">
          <%= f.label :password_confirmation, "Confirm Password", class: "control-label ml pwd-confirm-label" %>
          <%= f.password_field :password_confirmation, class: "text-field form-control pwd-confirm", html: {autocomplete: "off"} %>
        </div>

        <div class="form-group">
          <div class="center">
            <br><%= f.submit "Next", class: " btn btn-primary" %>
          </div>
        </div>

        <% end %>
      </div><!--/col-lg-12 -->
    </div><!-- /row -->
  </div><!-- /container -->

  <hr>
    

